<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialog_person_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre del cliente"
        android:drawableStart="@drawable/baseline_person_24"
        android:drawableTint="@color/coal_gray"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_car_model"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Modelo y placas"
        android:drawableStart="@drawable/baseline_directions_car_filled_24"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_person_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/dialog_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Direccion del cliente"
        android:drawableStart="@drawable/baseline_credit_card_24"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_car_model"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terminar Viaje"
        android:padding="10dp"
        android:background="@drawable/social_btn_background"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
