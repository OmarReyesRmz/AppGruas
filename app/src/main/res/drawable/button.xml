<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Orilla gris -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="@color/black_eban" />
        </shape>
    </item>

    <!-- Centro transparente -->
    <item
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="48dp" /> <!-- Ajuste para el borde interno -->
            <solid android:color="@color/white" /> <!-- Transparente -->
        </shape>
    </item>
</layer-list>
